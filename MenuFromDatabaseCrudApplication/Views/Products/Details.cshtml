@model MenuFromDatabaseCrudApplication.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MfgDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MfgDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>
    </dl>
</div>
<div class="btn btn-group-sm">

    @if (User.IsInRole("Admin") || User.IsInRole("Modarator"))
    {
        
        <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-outline-info">Edit</a>
    }
    <a asp-action="Index"  class="btn btn-outline-info">Back to List</a>
</div>
